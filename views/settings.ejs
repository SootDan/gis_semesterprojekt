<!DOCTYPE html>
<html lang="<%= locale %>">
    <%- include("templates/head") %>
    <body>
        <%- include("templates/navbar") %>
    <div class="content">
            <table>
                <thead>
                    <th>
                        <%=__("options_language") %>
                    </th>
                    <th>
                        <%=__("options_time_format") %>
                    </th>
                </thead>
                <tbody>
                    <form id="settings" action="login">
                        <td>
                            <select id="settings_lang">
                                <option value="de"><%=__("options_language_de") %></option>
                                <option value="us"><%=__("options_language_us") %></option>
                            </select>
                        </td>
                        <td>
                            <select id="settings_time_format">
                                <option value="DMY">DD.MM.YY</option>
                                <option value="MDY">MM/DD/YY</option>
                            </select>
                        </td>
                    </tbody>
                </table>
                <input type="submit" id="settings_save" value="<%=__('settings_save') %>">
            </form>
        </div>
        <%- include("templates/footer") %>
        <script src="<%= scriptPath %>" defer></script>
    </body>
</html>