                            <td>
                                <input type="text" id="subj_name">
                            </td>
                            <td>
                                <input type="number" id="subj_req_time">
                            </td>
                            <td>
                                <input type="date" id="subj_deadline">
                            </td>
                        </tr>
                    </tbody>
                </table>
                
                </br>

                <input type="submit" value="It's StudyTime!">
