<!DOCTYPE html>
<html lang="en">
    <%- include("templates/head") %>
    <body>
        <script src="<%= scriptPath %>" defer></script>
        <%- include("templates/navbar") %>
        <div class="content">
            <h3><%=__("register_welcome") %></h3>
            <%=__("register_description") %>

            <form id="register" action="/login">
