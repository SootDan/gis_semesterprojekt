                </table>

                </br>
                <hr>
                </br>

                <!-- TODO: Hide this table until upper form is filled out and validated -->
                <table>
                    <thead>
                        <th><%=__("subject") %>
                            <div class="tooltip_helper">
                                <input type="button" value="?" class="register_help">
                                <span class="tooltip">TODO: Tooltip einfuegen </br>
                                </span>
                            </div>
                        </th>
                        <th><%=__("time") %> (in <%=__("hours") %>)
